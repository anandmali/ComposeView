<?php
    function gender($name):?string
    {
        $nameEnds = (mb_substr($name, -1, 1));
        $res = file(__DIR__ .'/db.txt');
        foreach ($res as $gorod) {
            if (mb_strtoupper(mb_substr($nameEnds, 0, 1)) == mb_strtoupper(mb_substr($gorod, 0, 1))) {
                ?> <p><?=$name?> = <?=$gorod?></p> <?php
                return  $nameEnds;
            }
        }
    }
?>
